<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.digitalfood.activities.view.Signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/login_bg"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/register_upload_pic"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload your photo"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="fill_parent"
                android:layout_weight="0.08"
                android:background="@drawable/image_bg"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/icon_login_user" />

            <com.app.digitalfood.component.CustomEditText
                android:id="@+id/name_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.92"
                android:background="@color/light_blue"
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="fill_parent"
                android:layout_weight="0.08"
                android:background="@drawable/image_bg"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/icon_email" />

            <com.app.digitalfood.component.CustomEditText
                android:id="@+id/email_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.92"
                android:background="@color/light_blue"
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.08"
                    android:background="@drawable/image_bg"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/icon_password" />

                <com.app.digitalfood.component.CustomEditText
                    android:id="@+id/password_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.92"
                    android:inputType="numberPassword"
                    android:background="@color/light_blue"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/Black"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.08"
                    android:background="@drawable/image_bg"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/icon_gender" />

                <com.app.digitalfood.component.CustomEditText
                    android:id="@+id/gender_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.92"
                    android:maxLength="2"
                    android:background="@color/light_blue"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/Black"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="fill_parent"
                android:layout_weight="0.08"
                android:background="@drawable/image_bg"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/icon_phone" />

            <com.app.digitalfood.component.CustomEditText
                android:id="@+id/phone_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.92"
                android:background="@color/light_blue"
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:textColor="@color/White"
        android:textSize="@dimen/_15sdp"
        android:background="@drawable/btn_login"
        android:text="SIGN UP" />

</LinearLayout>